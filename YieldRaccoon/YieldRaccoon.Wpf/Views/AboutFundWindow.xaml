<mah:MetroWindow
    x:Class="YieldRaccoon.Wpf.Views.AboutFundWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:YieldRaccoon.Wpf.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:YieldRaccoon.Wpf.ViewModels"
    xmlns:views="clr-namespace:YieldRaccoon.Wpf.Views"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="{Binding Title}"
    Width="1600"
    Height="900"
    MinWidth="1000"
    MinHeight="600"
    d:DataContext="{d:DesignInstance viewModels:AboutFundWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    TitleCharacterCasing="Normal"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  Bind Window Loaded event to ViewModel command  -->
    <dxmvvm:Interaction.Behaviors>
        <dxmvvm:EventToCommand Command="{Binding LoadedCommand}" EventName="Loaded" />
    </dxmvvm:Interaction.Behaviors>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!--  Browser toolbar  -->
            <RowDefinition Height="Auto" />
            <!--  Main content (schedule | browser | control panel)  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Browser Toolbar  -->
        <Border
            Grid.Row="0"
            Padding="10,5"
            Background="{DynamicResource MahApps.Brushes.Gray9}"
            BorderBrush="{DynamicResource MahApps.Brushes.Gray7}"
            BorderThickness="1"
            CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Reload button  -->
                <Button
                    Grid.Column="0"
                    Width="80"
                    Command="{Binding ReloadCommand}"
                    Content="Reload"
                    Style="{StaticResource MahApps.Styles.Button.Flat}" />

                <!--  URL input  -->
                <TextBox
                    Grid.Column="1"
                    Margin="10,0"
                    VerticalAlignment="Center"
                    mah:TextBoxHelper.Watermark="Enter URL..."
                    Text="{Binding BrowserUrl, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding NavigateCommand}" />
                    </TextBox.InputBindings>
                </TextBox>

                <!--  Navigate button  -->
                <Button
                    Grid.Column="2"
                    Width="80"
                    Command="{Binding NavigateCommand}"
                    Content="Go"
                    Style="{StaticResource MahApps.Styles.Button.Flat}" />
            </Grid>
        </Border>

        <!--  Main Content - 3-column layout  -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <!--  Fund Schedule (left)  -->
                <ColumnDefinition Width="280" />
                <!--  Splitter  -->
                <ColumnDefinition Width="Auto" />
                <!--  WebView2 Browser (middle)  -->
                <ColumnDefinition Width="*" />
                <!--  Splitter  -->
                <ColumnDefinition Width="Auto" />
                <!--  Control Panel (right)  -->
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>

            <!--  Fund Schedule (left panel)  -->
            <views:AboutFundScheduleView Grid.Column="0" DataContext="{Binding FundScheduleViewModel}" />

            <!--  Splitter  -->
            <GridSplitter
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Center"
                Background="{DynamicResource MahApps.Brushes.Gray8}" />

            <!--  WebView2 Browser (middle)  -->
            <Border
                Grid.Column="2"
                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                BorderThickness="1"
                CornerRadius="4">
                <wv2:WebView2
                    x:Name="Browser"
                    behaviors:AboutFundWebView2Behavior.ViewModel="{Binding}"
                    Source="{Binding BrowserUrl, Mode=OneWay}" />
            </Border>

            <!--  Splitter  -->
            <GridSplitter
                Grid.Column="3"
                Width="5"
                HorizontalAlignment="Center"
                Background="{DynamicResource MahApps.Brushes.Gray8}" />

            <!--  Control Panel (right panel)  -->
            <views:AboutFundControlPanelView Grid.Column="4" DataContext="{Binding ControlPanelViewModel}" />
        </Grid>
    </Grid>
</mah:MetroWindow>
