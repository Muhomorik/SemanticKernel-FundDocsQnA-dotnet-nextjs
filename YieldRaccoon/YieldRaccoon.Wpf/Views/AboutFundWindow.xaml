<mah:MetroWindow
    x:Class="YieldRaccoon.Wpf.Views.AboutFundWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:YieldRaccoon.Wpf.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:YieldRaccoon.Wpf.ViewModels"
    xmlns:views="clr-namespace:YieldRaccoon.Wpf.Views"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="{Binding Title}"
    Width="1600"
    Height="900"
    MinWidth="1000"
    MinHeight="600"
    d:DataContext="{d:DesignInstance viewModels:AboutFundWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    Icon="/Resources/YieldRaccoon.ico"
    TitleCharacterCasing="Normal"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <dxmvvm:Interaction.Behaviors>
        <dxmvvm:EventToCommand Command="{Binding LoadedCommand}" EventName="Loaded" />
        <dxmvvm:CurrentWindowService ClosingCommand="{Binding WindowClosingCommand}" />
    </dxmvvm:Interaction.Behaviors>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <!--  Browser toolbar  -->
            <RowDefinition Height="Auto" />
            <!--  Main content (schedule | browser | control panel)  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Browser Toolbar  -->
        <Border
            Grid.Row="0"
            Padding="12,4"
            CornerRadius="0"
            Style="{StaticResource yr.PanelControlStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Reload button  -->
                <Button
                    Grid.Column="0"
                    Width="80"
                    Command="{Binding ReloadCommand}"
                    Content="Reload"
                    Style="{StaticResource yr.ButtonFlatStyle}" />

                <!--  URL input  -->
                <TextBox
                    Grid.Column="1"
                    Margin="8,0"
                    VerticalAlignment="Center"
                    mah:TextBoxHelper.Watermark="Enter URL..."
                    Text="{Binding BrowserUrl, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style BasedOn="{StaticResource MahApps.Styles.TextBox}" TargetType="TextBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPrivacyMode}" Value="True">
                                    <Setter Property="Foreground" Value="Transparent" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding NavigateCommand}" />
                    </TextBox.InputBindings>
                </TextBox>

                <!--  Navigate button  -->
                <Button
                    Grid.Column="2"
                    Width="80"
                    Command="{Binding NavigateCommand}"
                    Content="Go"
                    Style="{StaticResource yr.ButtonFlatStyle}" />

                <!--  Privacy mode toggle  -->
                <mah:ToggleSwitch
                    Grid.Column="3"
                    Margin="8,0,0,0"
                    IsOn="{Binding IsPrivacyMode}"
                    OffContent="Normal"
                    OnContent="Privacy"
                    ToolTip="Apply privacy filter to hide browser content" />
            </Grid>
        </Border>

        <!--  Main Content - 3-column layout  -->
        <Grid Grid.Row="1" Margin="{StaticResource yr.ItemSpacing}">
            <Grid.ColumnDefinitions>
                <!--  Fund Schedule (left)  -->
                <ColumnDefinition Width="280" />
                <!--  Splitter  -->
                <ColumnDefinition Width="Auto" />
                <!--  WebView2 Browser (middle)  -->
                <ColumnDefinition Width="*" />
                <!--  Splitter  -->
                <ColumnDefinition Width="Auto" />
                <!--  Control Panel (right)  -->
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>

            <!--  Fund Schedule (left panel)  -->
            <views:AboutFundScheduleView Grid.Column="0" DataContext="{Binding FundScheduleViewModel}" />

            <!--  Splitter  -->
            <GridSplitter Grid.Column="1" Style="{StaticResource yr.SplitterStyle}" />

            <!--  WebView2 Browser (middle) with privacy overlay  -->
            <Border
                Grid.Column="2"
                BorderBrush="{StaticResource MahApps.Brushes.Gray7}"
                BorderThickness="1"
                CornerRadius="8">
                <Grid>
                    <!--  Browser (always present â€” toggled Collapsed by code-behind when privacy active)  -->
                    <wv2:WebView2
                        x:Name="Browser"
                        behaviors:AboutFundWebView2Behavior.ViewModel="{Binding}"
                        Source="{Binding BrowserUrl, Mode=OneWay}" />

                    <!--  Privacy overlay (covers browser when active)  -->
                    <Grid Background="Black" Visibility="{Binding IsPrivacyMode, Converter={dxmvvm:BooleanToVisibilityConverter}}">
                        <Image
                            RenderOptions.BitmapScalingMode="NearestNeighbor"
                            Source="{Binding PrivacyScreenshot}"
                            Stretch="Fill" />

                        <!--  Privacy mode indicator  -->
                        <Border Background="{StaticResource yr.OverlayBrush}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!--  Shield icon  -->
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe Fluent Icons"
                                    FontSize="48"
                                    Foreground="White"
                                    Text="&#xED1A;" />
                                <TextBlock
                                    Margin="0,12,0,0"
                                    HorizontalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    Text="Privacy mode" />
                                <TextBlock
                                    Margin="0,8,0,0"
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Style="{StaticResource yr.BodyStyle}"
                                    Text="Browser content hidden" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!--  Splitter  -->
            <GridSplitter Grid.Column="3" Style="{StaticResource yr.SplitterStyle}" />

            <!--  Control Panel (right panel)  -->
            <views:AboutFundControlPanelView Grid.Column="4" DataContext="{Binding ControlPanelViewModel}" />
        </Grid>
    </Grid>
</mah:MetroWindow>
