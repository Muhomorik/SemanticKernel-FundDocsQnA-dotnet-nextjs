<UserControl
    x:Class="YieldRaccoon.Wpf.Views.AboutFundScheduleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:YieldRaccoon.Wpf.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:AboutFundScheduleViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel Grid.Row="0">
            <TextBlock
                Style="{StaticResource yr.TitleStyle}"
                Text="Fund Schedule" />
            <TextBlock
                Margin="{StaticResource yr.CompactSpacing}"
                Style="{StaticResource yr.CaptionStyle}"
                Foreground="{DynamicResource MahApps.Brushes.Gray1}">
                <Run Text="Showing: " />
                <Run FontWeight="Bold" Text="{Binding TotalFunds, Mode=OneWay}" />
                <Run Text=" funds (by history count)" />
            </TextBlock>
        </StackPanel>

        <!--  Fund List  -->
        <ListBox
            Grid.Row="1"
            Margin="{StaticResource yr.ItemSpacing}"
            Background="Transparent"
            BorderThickness="0"
            ItemsSource="{Binding Funds}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid x:Name="FundRow" Margin="0,4,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Status icon  -->
                        <TextBlock
                            x:Name="StatusIcon"
                            Grid.Column="0"
                            Margin="0,0,8,0"
                            VerticalAlignment="Top"
                            FontFamily="Segoe Fluent Icons"
                            FontSize="12" />

                        <!--  Fund info  -->
                        <StackPanel Grid.Column="1">
                            <TextBlock
                                x:Name="FundName"
                                FontWeight="SemiBold"
                                Text="{Binding Name}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                Style="{StaticResource yr.SmallStyle}"
                                Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                                Text="{Binding Isin}" />
                        </StackPanel>

                        <!--  History count  -->
                        <TextBlock
                            Grid.Column="2"
                            Margin="8,0,4,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource yr.SmallStyle}"
                            Foreground="{DynamicResource MahApps.Brushes.Gray3}"
                            Text="{Binding HistoryRecordCount, StringFormat={}{0} rec}" />
                    </Grid>

                    <DataTemplate.Triggers>
                        <!--  Completed fund: green checkmark  -->
                        <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                            <Setter TargetName="StatusIcon" Property="Text" Value="&#xE73E;" />
                            <Setter TargetName="StatusIcon" Property="Foreground" Value="{DynamicResource yr.SuccessBrush}" />
                            <Setter TargetName="FundName" Property="Foreground" Value="{DynamicResource MahApps.Brushes.Gray3}" />
                        </DataTrigger>
                        <!--  Current fund: accent arrow  -->
                        <DataTrigger Binding="{Binding IsCurrentFund}" Value="True">
                            <Setter TargetName="StatusIcon" Property="Text" Value="&#xE76C;" />
                            <Setter TargetName="StatusIcon" Property="Foreground" Value="{DynamicResource MahApps.Brushes.Accent}" />
                            <Setter TargetName="FundName" Property="Foreground" Value="{DynamicResource MahApps.Brushes.Accent}" />
                            <Setter TargetName="FundName" Property="FontWeight" Value="Bold" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
