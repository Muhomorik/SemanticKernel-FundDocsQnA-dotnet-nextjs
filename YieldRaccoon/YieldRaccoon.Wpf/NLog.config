<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true">

  <targets>
    <!-- Debugger target - writes to Visual Studio Debug Output window -->
    <target xsi:type="Debugger"
            name="debugger"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:${newline}${exception:format=tostring}}" />

    <!-- Console target - writes to console -->
    <target xsi:type="Console"
            name="console"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:${newline}${exception:format=tostring}}" />
  </targets>

  <rules>
    <!-- Write all logs to debugger and console -->
    <logger name="*" minlevel="Trace" writeTo="debugger,console" />
  </rules>
</nlog>
